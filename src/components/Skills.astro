---
import Section from "./Section.astro";
import CardItem from "./CardItem.astro";
import { SKILLS } from "../data/skills";

const { id } = Astro.props;
---

<Section
  title="Habilidades"
  id={id}
  subtitle="TecnologÃ­as y herramientas que manejo"
>
  <CardItem class="py-8 px-12">
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
      {SKILLS.map((skill) => (
        <div class="flex flex-col items-center text-center">
          <img
            class="w-16 h-16 mb-2 object-contain"
            src={skill.icon}
            alt={skill.name}
            loading="lazy"
          />
          <span class="text-lg font-semibold">{skill.name}</span>
        </div>
      ))}
    </div>
  </CardItem>
</Section>
