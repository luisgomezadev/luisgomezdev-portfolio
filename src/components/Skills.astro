---
import Section from './shared/Section.astro'
import { SKILLS } from '../data/skills'

const { id } = Astro.props
---

<Section
  title="Habilidades"
  id={id}
  subtitle="TecnologÃ­as y herramientas que manejo"
  class="bg-[#EEE]"
>
  <div class="py-8 px-3 max-w-7xl mx-auto">
    <div class="grid grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-8">
      {
        SKILLS.map((skill) => (
          <div class="flex flex-col items-center text-center">
            <img
              class="w-16 h-16 mb-2 object-contain"
              src={skill.icon}
              alt={skill.name}
              loading="lazy"
            />
            <span class="text-lg font-semibold">{skill.name}</span>
          </div>
        ))
      }
    </div>
  </div>
</Section>
