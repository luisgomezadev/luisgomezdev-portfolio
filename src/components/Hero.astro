---
import GitHub from '../assets/icons/GitHub.astro'
import LinkedIn from '../assets/icons/LinkedIn.astro'
import CvIcon from '../assets/icons/CvIcon.astro'
import EmailIcon from '../assets/icons/EmailIcon.astro'
import AngularIcon from '../assets/icons/AngularIcon.astro'
import TypeScriptIcon from '../assets/icons/TypeScriptIcon.astro'
import SpringIcon from '../assets/icons/SpringIcon.astro'
import JavaScriptIcon from '../assets/icons/JavaScriptIcon.astro'

import ButtonLink from './shared/ButtonLink.astro'

const { id } = Astro.props
---

<section
  id={id}
  class="h-auto md:min-h-screen scroll-mt-16 overflow-x-hidden transition-all duration-500 bg-gradient-to-br from-gray-50 via-white to-blue-100 dark:from-gray-900 dark:via-gray-950 dark:to-blue-950 text-gray-800"
>
  <header
    class="max-w-7xl mx-auto px-4 lg:px-6 py-20 md:py-32 gap-x-12 gap-y-10 items-center h-auto md:h-screen flex flex-col md:flex-row justify-between"
  >
    <div class="flex flex-col gap-4 text-center md:text-left animate-fade-in-left">
      <div>
        <p class="text-lg md:mb-4 text-gray-600 dark:text-gray-400">Hola, mi nombre es</p>
        <h1
          class="text-4xl md:text-5xl lg:text-7xl font-bold md:mb-3 leading-20 md:leading-24 text-blue-800 dark:text-blue-600"
        >
          Luis Gómez Arteaga
        </h1>
      </div>
      <h2 class="text-2xl lg:text-3xl font-semibold typing-text text-black dark:text-white">Desarrollador Web</h2>
      <p
        class="text-lg text-pretty text-gray-800 opacity-80 dark:text-white/80 leading-relaxed max-w-2xl my-3 md:my-0"
      >
        Ingeniero de Sistemas con más de 4 años de experiencia. Experto en el ciclo de vida completo del software, dominando el stack Java/Spring Boot (Backend) y TypeScript/Angular (Frontend).
      </p>
      <div class="flex items-center space-x-4 justify-center md:justify-start">
        <span class="text-gray-800 dark:text-white font-medium hidden md:block">Sígueme por:</span>
        <div class="flex space-x-3">
          <ButtonLink
            href="https://github.com/luisgomezadev"
            title="GitHub Luis Gomez"
            class="bg-blue-800"
          >
            <GitHub class="w-6 h-6" />
          </ButtonLink>
          <ButtonLink
            href="https://www.linkedin.com/in/luisgomezdev/"
            title="LinkedIn Luis Gomez"
            class="bg-blue-800"
          >
            <LinkedIn class="w-6 h-6" />
          </ButtonLink>
          <ButtonLink
            href="mailto:luisgomez24g@gmail.com"
            title="Enviar correo a Luis Gomez"
            class="block md:hidden bg-blue-800"
          >
            <EmailIcon class="w-6 h-6" />
          </ButtonLink>
          <ButtonLink
            title="Descargar CV de Luis Gomez"
            class="px-4 block md:hidden bg-blue-800"
            href="/files/CV_Luis_Gomez_2025.pdf"
          >
            <CvIcon color="#FFF" size={20} />
            Descargar mi CV
          </ButtonLink>
        </div>
      </div>
      <div class="md:flex items-center gap-4 mt-4 hidden">
        <ButtonLink
          href="mailto:luisgomez24g@gmail.com"
          title="Enviar correo a Luis Gomez"
          class="px-4 bg-blue-800"
        >
          <EmailIcon color="#FFF" size={20} />
          Contactar
        </ButtonLink>
        <ButtonLink
          title="Descargar CV de Luis Gomez"
          class="px-4 bg-gray-200 text-blue-600"
          textColor="text-blue-800"
          href="/files/CV_Luis_Gomez_2025.pdf"
        >
          <CvIcon color="#193cb8" size={20} />
          Descargar mi CV
        </ButtonLink>
      </div>
    </div>
    <div class="relative flex justify-center items-center">
      <div class="bg-blue-800 dark:bg-blue-600 p-1 rounded-full animate-fade-in-up">
        <img
          src="/luis_perfil.webp"
          alt="Luis Gómez"
          class="bg-gray-100 dark:bg-gray-800 rounded-full w-72 h-72 sm:w-96 sm:h-96 lg:w-[420px] lg:h-[420px] object-cover grayscale"
        />
      </div>
    </div>
  </header>
</section>
<style>
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }

    50% {
      transform: translateY(-10px);
    }
  }

  .animate-fade-in-left {
    animation: fadeInLeft 1s ease-out both;
  }

  @keyframes fadeInLeft {
    0% {
      opacity: 0;
      transform: translateX(-30px);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 1.2s ease-out both;
  }

  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(30px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
