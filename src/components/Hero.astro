---
import GitHub from '../assets/icons/GitHub.astro'
import LinkedIn from '../assets/icons/LinkedIn.astro'
import CvIcon from '../assets/icons/CvIcon.astro'
import EmailIcon from '../assets/icons/EmailIcon.astro'
import AngularIcon from '../assets/icons/AngularIcon.astro'
import TypeScriptIcon from '../assets/icons/TypeScriptIcon.astro'
import SpringIcon from '../assets/icons/SpringIcon.astro'
import JavaScriptIcon from '../assets/icons/JavaScriptIcon.astro'

import ButtonLink from './shared/ButtonLink.astro'

const { id } = Astro.props
---

<section id={id} class="h-auto md:min-h-screen scroll-mt-16 bg-gray-100">
  <header
    class="max-w-7xl mx-auto px-4 lg:px-6 py-12 grid md:grid-cols-2 gap-x-12 gap-y-10 items-center h-auto md:h-screen"
  >
    <div class="flex flex-col gap-6 text-center md:text-left animate-fade-in-left">
      <div>
        <span class="text-xl opacity-80 uppercase font-semibold">Hola, soy</span>
        <h1 class="text-6xl lg:text-8xl font-bold text-red-800 tracking-tighter">Luis Gómez</h1>
      </div>
      <h2 class="text-2xl lg:text-3xl font-semibold typing-text text-black">Desarrollador Web
      </h2>
      <p
        class="text-lg text-pretty text-gray-800 opacity-80 dark:text-black leading-relaxed max-w-lg"
      >
        Ingeniero de sistemas con más de cuatro años de experiencia en el diseño, desarrollo y
        mantenimiento de aplicaciones web modernas.
      </p>
      <div class="flex items-center space-x-4 justify-center md:justify-start">
        <span class="text-gray-800 dark:text-black font-medium hidden md:block">Sígueme por:</span>
        <div class="flex space-x-3">
          <ButtonLink
            href="https://github.com/luisgomezadev"
            title="GitHub Luis Gomez"
            class="text-white bg-black"
          >
            <GitHub class="w-6 h-6" />
          </ButtonLink>
          <ButtonLink
            href="https://www.linkedin.com/in/luisgomezdev/"
            title="LinkedIn Luis Gomez"
            class="text-white bg-black"
          >
            <LinkedIn class="w-6 h-6" />
          </ButtonLink>
          <ButtonLink
            href="mailto:luisgomez24g@gmail.com"
            title="Enviar correo a Luis Gomez"
            class="text-white bg-black block md:hidden"
          >
            <EmailIcon class="w-6 h-6" />
          </ButtonLink>
          <ButtonLink
            title="Descargar CV de Luis Gomez"
            class="bg-transparent border-2 border-black text-black px-4 block md:hidden"
            href="/files/CV_Luis_Gomez_2025.pdf"
          >
            <CvIcon color="#000" size={20} />
            Descargar mi CV
          </ButtonLink>
        </div>
      </div>
      <div class="md:flex items-center gap-4 mt-4 hidden">
        <ButtonLink
          href="mailto:luisgomez24g@gmail.com"
          title="Enviar correo a Luis Gomez"
          class="text-white bg-black px-4"
        >
          <EmailIcon color="#FFF" size={20} />
          Contactar
        </ButtonLink>
        <ButtonLink
          title="Descargar CV de Luis Gomez"
          class="bg-transparent border-2 border-black text-black px-4"
          href="/files/CV_Luis_Gomez_2025.pdf"
        >
          <CvIcon color="#000" size={20} />
          Descargar mi CV
        </ButtonLink>
      </div>
    </div>
    <div class="relative flex justify-center items-center">
      <div class="relative bg-gray-100">
        <img
          src="/images/perfil.webp"
          alt="Luis Gómez"
          class="bg-gray-100 w-72 h-72 sm:w-96 sm:h-96 lg:w-[480px] lg:h-[480px] object-cover hover:-translate-y-2 transition-all duration-300"
        />
      </div>
      <div
        class="absolute top-6 left-8 sm:left-20 w-12 h-12 sm:w-16 sm:h-16 bg-white text-gray-800 border rounded-full drop-shadow-2xl shadow-lg shadow-gray-800 flex items-center justify-center hover:scale-110 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 animate-float group"
      >
        <span class="group-hover:text-red-700 transition-all duration-300"
          ><AngularIcon class="w-6 h-6 sm:w-8 sm:h-8" /></span
        >
      </div>
      <div
        class="absolute top-12 right-8 md:right-12 w-12 h-12 sm:w-16 sm:h-16 bg-white text-gray-800 border rounded-full drop-shadow-2xl shadow-lg shadow-gray-800 flex items-center justify-center hover:scale-110 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 animate-float group"
      >
        <span class="group-hover:text-blue-700 transition-all duration-300"
          ><TypeScriptIcon class="w-6 h-6 sm:w-8 sm:h-8" /></span
        >
      </div>
      <div
        class="absolute bottom-0 left-8 sm:left-20 w-12 h-12 sm:w-16 sm:h-16 bg-white text-gray-800 border rounded-full drop-shadow-2xl shadow-lg shadow-gray-800 flex items-center justify-center hover:scale-110 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 animate-float group"
      >
        <span class="group-hover:text-green-600 transition-all duration-300"
          ><SpringIcon class="w-6 h-6 sm:w-8 sm:h-8" /></span
        >
      </div>
      <div
        class="absolute bottom-8 sm:bottom-10 right-10 sm:right-12 w-12 h-12 sm:w-16 sm:h-16 bg-white text-gray-800 border rounded-full drop-shadow-2xl shadow-lg shadow-gray-800 flex items-center justify-center hover:scale-110 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 animate-float group"
      >
        <span class="group-hover:text-[#F7DF1E] transition-all duration-300"
          ><JavaScriptIcon class="w-6 h-6 sm:w-8 sm:h-8" /></span
        >
      </div>
    </div>
  </header>
</section>
<style>
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }

    50% {
      transform: translateY(-10px);
    }
  }

  .animate-fade-in-left {
    animation: fadeInLeft 1s ease-out both;
  }

  @keyframes fadeInLeft {
    0% {
      opacity: 0;
      transform: translateX(-30px);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 1.2s ease-out both;
  }

  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(30px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
